<!--
Aquest arxiu rep una llista amb noms de naus
genera un enllaç ‘html’ cap a la pàgina de item que correspon a aquell nom
-->
<% for (const producto of llista) { %>
    <div class='productoPrincip'>
      <div class='mitad uno'>
        <p><%= producto.nombre %></p>
      </div>
      <div class='mitad dos'>
        <a href='/edit/<%= producto.id %>' style='text-decoration:none; color: #000'><i class='fa fa-solid fa-pen'></i></a>
      </div>
    </div>
    <hr>
  <% } %>
