<h1>Editar producto:</h1>
    <form action="/delete/<%= producto.id %>" method="get">
        <input type="submit" value="Eliminar Producto">
    </form>
<form action="/edit/<%= producto.id %>" method="post">    
    <div class="formRow">Nombre: <input type="text" name="nombre" value="<%= producto.nombre || '' %>"/></div>
    <div class="formRow">Precio: <input type="text" name="precio" value="<%= producto.precio || '' %>"/></div>
    <div class="formRow">Descripci√≥n: <textarea type="text" name="descripcion"><%= producto.descripcion || '' %></textarea></div>
    <div class="formRow" style="display: flex;flex-direction: column;">Imagen:
        <img src="../../<%= producto.img %>" alt="" width="75%" height="75%">
        <input type="file" name="files" accept="img/*" value="<%= producto.img || '' %>">
    </div>
    <div class="formRow"><input type="submit" value="Guardar Cambios"></div>
</form>


